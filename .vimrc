set nocompatible

" Tab Handling
set tabstop=4
set softtabstop=4
set expandtab

" Some code
set number 
set smartindent

syntax enable

" Mouse
set ttymouse=xterm2
set mouse=a

" Colour
" colorscheme base16-chalk

set encoding=utf-8

set backspace=indent,eol,start

" Clipboard (for tmux) 
set clipboard=unnamed
